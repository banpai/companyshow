/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.d_naver {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.d_naver .nav_li {
  border: 1px solid #000;
  text-align: center;
}
.navbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #e0e0e0;
}
.navbar .nb_li .nb_lid .nb_icon {
  width: 45rpx;
  height: 45rpx;
  margin: 25rpx auto;
  margin-bottom: 10rpx;
}
.navbar .nb_li .nb_lid .nb_icon .ic {
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.navbar .nb_li .nb_lid .nb_text {
  text-align: center;
  padding-bottom: 25rpx;
}
